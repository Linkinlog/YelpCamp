<%- layout('layouts/boilerplate') %>
<div id="cluster-map"></div>
<div class="container">
	<h1>All campgrounds</h1>
	<% for ( let camp of campgrounds.reverse() ) { %>
	<div class="card mb-3">
		<div class="row">
			<div class="col-md-4">
				<img class="img-fluid" src="<%= camp.images.length ? camp.images[0].url : 'https://res.cloudinary.com/dhclz5fy2/image/upload/v1628074506/YelpCamp/645_yq05co.jpg' %> " alt="<%= camp.title %> " />
			</div>
			<div class="col-md-8">
				<div class="card-body">
					<h5 class="card-title"><%= camp.title %></h5>
					<p class="card-text"><%= camp.description %></p>
					<small class="text-muted"><%= camp.location %> </small>
					<br />
					<a href="/campgrounds/<%= camp.id  %> " class="btn btn-primary mt-5">View this listing</a>
				</div>
			</div>
		</div>
	</div>
	<% } %>
</div>
<script>
	const MAPBOX_TOKEN = '<%- process.env.MAPBOX_TOKEN %>';
	const campground =  {features: <%- JSON.stringify(campgrounds) %>};
</script>
<script src="/JS/clusterMap.js"></script>
